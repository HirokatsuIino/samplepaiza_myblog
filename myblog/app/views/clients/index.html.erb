<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th style="width: 100px;">クライアント名</th>
      <th style="width: 100px;">ID</th>
      <th style="width: 300px;">掲載</th>
      <th style="width: 500px;">開始タイマー</th>
      <th style="width: 500px;">停止タイマー</th>
      <th style="width: 500px;">当月予算上限</th>
      <th style="width: 500px;">備考</th>
      <th style="width: 500px;">最終編集</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">クライアント名</td>
        <% else %>
          <td style="width: 500px;"><%= client.client_publishing_setting.client.name %></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">ID</td>
        <% else %>
          <td style="width: 100px;"><%= client.client_publishing_setting.client.id %></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">掲載</td>
        <% else %>
          <td style="width: 100px;"></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">開始タイマー</td>
        <% else %>
          <td style="width: 100px;"><%= client.begin_at %></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">停止タイマー</td>
        <% else %>
          <td style="width: 100px;"><%= client.end_at %></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">当月予算上限</td>
        <% else %>
          <td style="width: 100px;"></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;"></td>
        <% else %>
          <td style="width: 300px;"><%= client.client_publishing_setting.client.admin_comment %></td>
        <% end %>

        <% if client.client_publishing_setting.client.blank? %>
          <td style="width: 500px;">最終編集</td>
        <% else %>
          <td style="width: 100px;"><%= client.client_publishing_setting.client.updated_at %></td>
        <% end %>



        <!--        <td><%#= client.client_publishing_settings.comment %></td>-->
<!--        <td><%#= client.client_unit_price.unit_price_id %></td>-->
<!--        <td><%#= client.publishing_fee.value %></td>-->
<!--        <td><%#= client.client_unit_price.id %></td>-->
        <% if client.client_publishing_setting.client.blank? %>
        <% else %>
          <td><%= link_to 'Show', client_path(client.client_publishing_setting.client.id) %></td>
<!--          <td><%#= link_to 'Edit', edit_client_path(client) %></td>-->
<!--          <td><%#= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <% end %>

          </tr>
    <% end %>
  </tbody>
</table>
